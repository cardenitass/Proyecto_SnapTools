@model ProyectowebB.Entities.UsuarioEnt

@{
    ViewBag.Title = "ActualizarUsuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="custom-card p-4">
        <h3 class="mb-4">Actualizar Información</h3>

        <br/>

        @using (Html.BeginForm("ActualizarUsuario", "Usuario", FormMethod.Post, new { onsubmit = "showSpinner()" }))
        {
            <div class="row">
                @Html.HiddenFor(x => x.IdUsuario)
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="correoElectronico">Correo Electrónico</label>
                        @Html.TextBoxFor(m => m.CorreoElectronico, new { @type = "email", @class = "form-control", @readonly = "true" })
                    </div>
                    <div class="form-group">
                        <label for="contraseña">Contraseña</label>
                        @Html.TextBoxFor(m => m.Contrasenna, new { @type = "password", @class = "form-control", @placeholder = "Ingrese la nueva contraseña" })
                    </div>
                    <div class="form-group">
                        <label for="identificacion">Identificación</label>
                        @Html.TextBoxFor(m => m.Identificacion, new {@type = "text", @class = "form-control",
                        @placeholder = "Ingrese la identificación", @onkeyUp = "ConsultarNombreApi();" })
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label for="nombre">Nombre</label>
                        @Html.TextBoxFor(m => m.Nombre, new { @type = "text", @class = "form-control", @readonly = "true" })
                    </div>
                    <div class="form-group">
                        <label for="provincia">Provincia</label>
                        @Html.DropDownListFor(m => m.IdProvincia, ViewBag.ListaProvincias as List<SelectListItem>,
                        new { @type = "text", @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="rol">Rol</label>
                        @Html.DropDownListFor(m => m.Rol, ViewBag.ListaRoles as List<SelectListItem>,
                        new { @type = "text", @class = "form-control", })
                    </div>
                </div>
            </div>

            <br/>

            <input type="submit" class="btn btn-primary" value="Actualizar">
        }
    </div>
</div>

<script src="~/Funciones/ActualizarUsuario.js"></script>