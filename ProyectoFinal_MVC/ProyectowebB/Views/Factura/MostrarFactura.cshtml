@model IEnumerable<ProyectowebB.Entities.FacturaEnt>
@{
    ViewBag.Title = "MostrarFactura";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container mt-4">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="custom-card col-md-13">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="card-title m-0">Mis Facturas</h4>
                </div>
                <br />
                <table id="miTabla" class="table table-hover">
                    <thead>
                        <tr>
                            <th>Numero Factura</th>
                            <th>Fecha de Compra</th>
                            <th>SubTotal</th>
                            <th>Impuesto (IVA)</th>
                            <th>Total</th>
                            <th>Acciones</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.IdFactura</td>
                                <td>@item.FechaCompra.ToString("dd/MM/yyyy")</td>
                                <td>₡@string.Format("{0:n2}", @item.SubTotal)</td>
                                <td>₡@string.Format("{0:n2}", @item.Impuesto)</td>
                                <td>₡@string.Format("{0:n2}", @item.Total)</td>
                                <td style="display: flex">
                                    <a class="btn btn-primary mr-2 rounded" href="@Url.Action("MostrarDetalleFactura","Factura", new { onsubmit = "showSpinner()", IdFactura = item.IdFactura})"><i class="fa-solid fa-eye"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


