@model ProyectowebB.Entities.ProductoEnt
@{
    ViewBag.Title = "ActualizarProducto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="custom-card p-4">
        <h3 class="mb-4">Actualizar Información</h3>

        <br />

        @using (Html.BeginForm("ActualizarProducto", "Producto", FormMethod.Post, new { onsubmit = "showSpinner()"}))
        {
            <div class="row">
                @Html.HiddenFor(x => x.IdProducto)
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Nombre</label>
                        @Html.TextBoxFor(m => m.Nombre, new { @type = "text", @class = "form-control", @required = true, @maxlength = 40 })
                    </div>
                    <div class="form-group">
                        <label>Descripción</label>
                        @Html.TextAreaFor(m => m.Descripcion, new
                        {
                            @type = "text",
                            @class = "form-control",
                            @required = true,
                            @maxlength = 100
                        })
                    </div>
                    <div class="form-group">
                        <label>Stock</label>
                        @Html.TextBoxFor(m => m.Stock, new { @type = "number", min = "1", max="999", @class = "form-control", @required = true })
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label>Precio</label>
                        @Html.TextBoxFor(m => m.Precio, new { @type = "text", @class = "form-control", @required = true })
                    </div>
                    <div class="form-group">
                        <label>Url Imagen</label>
                        @Html.TextBoxFor(m => m.ImagenURL, new { @type = "text", @class = "form-control", @required = true })
                    </div>
                    <br />
                    <div class="form-group">
                        <label for="rol">Tienda</label>
                        @Html.DropDownListFor(m => m.IdTienda, ViewBag.ListaTiendas as List<SelectListItem>,
                        new { @type = "text", @class = "form-control", })
                    </div>
                </div>
            </div>

            <br />

            <input type="submit" class="btn btn-primary" value="Actualizar">
        }
    </div>
</div>
