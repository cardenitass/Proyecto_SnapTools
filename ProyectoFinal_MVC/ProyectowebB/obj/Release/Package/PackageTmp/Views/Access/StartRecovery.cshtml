@model ProyectowebB.Models.RecoveryModel

@{
    ViewBag.Title = "StartRecovery";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

<main>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Recuperación de contraseña </h3></div>
                    <div class="card-body">



                        <form action=" @Url.Content("~/Access/StartRecovery")" method="post">
                            <label>Escribe tu correo electrónico</label>
                            @Html.TextBoxFor(d => d.Email, null, new
                           { @class = "form-control", @onblur = "BuscarCorreo();" })

                            @Html.ValidationMessageFor(d => d.Email, null, new { style = "color: red;" })

                            <div class="d-flex align-items-center justify-content-between mt-4 mb-0">


                                <input type="submit" id="BtnEnviarContrasenna" disabled class="btn btn-primary" value="Enviar Email" />

                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</main>

<script src="~/Funciones/StartRecovery.js"></script>

